<Window x:Class="poemwriter2.MenuSchemaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poemwriter2"
        mc:Ignorable="d"
        Title="MenuSchemaWindow" Height="300" Width="300" AllowsTransparency="True" WindowStyle="None">
    <Grid Background="#FF8B7050" RenderTransformOrigin="1.233,0.75">
        <Button x:Name="button" Content="X" HorizontalAlignment="Left" Margin="265,0,0,0" VerticalAlignment="Top" Width="27" Style="{DynamicResource ButtonStyle1}" Height="25" Click="button_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="145" Margin="130,40,0,0" VerticalAlignment="Top" Width="140" Background="{x:Null}" ClipToBounds="True">
            <ListBox.Effect>
                <DropShadowEffect/>
            </ListBox.Effect>
        </ListBox>
        <Label x:Name="label" Content="Strófa stílusok" HorizontalAlignment="Left" Margin="130,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.192" Width="110" FontFamily="Papyrus" FontStyle="Italic"/>
    </Grid>
</Window>
