<Window x:Class="poemwriter2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poemwriter2"
        mc:Ignorable="d"
        Title="Poemwriter" Height="700" Width="900" Icon="images/paper.png" WindowStyle="None" AllowsTransparency="True" >
    <Window.Background>
        <ImageBrush ImageSource="images/paper.png"/>
    </Window.Background>
    <Grid  MouseLeftButtonDown="move">
        <Button x:Name="button" 
                Content="Write" 
                Margin="51,495,0,145" 
                Width="102" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Stretch" 
                Height="60" 
                FontFamily="Papyrus" 
                FontSize="20" Style="{DynamicResource ButtonStyle1}"   >
            
        </Button>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="15" Margin="10,0,0,0" VerticalAlignment="Top" Width="497" Foreground="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" Background="{x:Null}"/>
        <Button x:Name="button_Copy" 

                Content="Delete" 
                Margin="51,527,0,0" 
                Width="102"  
                HorizontalAlignment="Left" 
                VerticalAlignment="Stretch" 
                Height="60" 
                FontFamily="Papyrus" 
                FontSize="20" Style="{DynamicResource ButtonStyle1}" >
            
            <Button.Effect>
                <DropShadowEffect ShadowDepth="2"/>
            </Button.Effect>

        </Button>
        <TextBox x:Name="textBox" 
                 HorizontalAlignment="Left" 
                 FontFamily="Papyrus" 
                 Height="215" 
                 Margin="335,225,0,0" 
                 TextWrapping="Wrap"  
                 VerticalAlignment="Top" 
                 Width="445" 
                 SelectionBrush="{x:Null}" BorderBrush="Transparent">
            <TextBox.Background>
                <ImageBrush ImageSource="images/paper2.png"/>
            </TextBox.Background>
            <TextBox.Effect>
                <DropShadowEffect ShadowDepth="1"/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="buttonClose" Content="X" FontSize="25" HorizontalAlignment="Stretch" Margin="795,50,0,0" VerticalAlignment="Top" Width="65" Height="55" Click="button1_Click"  FontFamily="Ravie" Style="{DynamicResource ButtonStyle1}">
            <Button.Background>
                <ImageBrush ImageSource="images/wc.png"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="buttonMaxi" Content="[]" FontSize="25" HorizontalAlignment="Stretch" Margin="755,50,80,0" VerticalAlignment="Top" Width="65" Height="55" Click="button2_Click"  FontFamily="Ravie" Style="{DynamicResource ButtonStyle1}">
            <Button.Background>
                <ImageBrush ImageSource="images/wc.png"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="buttonMini" Content="-" FontSize="55" HorizontalAlignment="Stretch" Margin="690,50,145,0" VerticalAlignment="Top" Width="65" Height="55" Click="button3_Click"  FontFamily="Ravie" Style="{DynamicResource ButtonStyle1}">
            <Button.Background>
                <ImageBrush ImageSource="images/wc.png"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Menu x:Name="menu1" HorizontalAlignment="Left" Height="25" Margin="90,50,0,0" VerticalAlignment="Top" Width="245" Background="{x:Null}" BorderBrush="#FF68461D" FontFamily="Papyrus" FontSize="16">
            <Menu.Effect>
                <DropShadowEffect/>
            </Menu.Effect>
            <MenuItem x:Name="fileMenu" Header="File" FontFamily="Papyrus" FontSize="16" >
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem x:Name="editMenu" Header="Edit" FontFamily="Papyrus" FontSize="16" >
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem x:Name="schemaMenu" Header="Schemas" FontFamily="Papyrus" FontSize="16"  >
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="154"  Height="26"/>
            </MenuItem>
            <MenuItem x:Name="rhymeMenu" Header="Rhyme" FontFamily="Papyrus" FontSize="16" >
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
