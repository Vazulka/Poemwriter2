<Window x:Class="poemwriter2.MenuRhymeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poemwriter2"
        mc:Ignorable="d"
        Title="MenuRhymeWindow" 
        Height="600" 
        Width="700" 
        AllowsTransparency="True" 
        WindowStyle="None" 
        Icon="images/paper.png"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="rhymegrid" Margin="-20,-30,-30,-30">
        <Grid.Background>
            <ImageBrush ImageSource="images/pergamen07.png"/>
        </Grid.Background>
        <Button x:Name="button" Content="X" HorizontalAlignment="Left" Margin="608,75,0,0" VerticalAlignment="Top" Width="27" FontSize="30"
    		Style="{DynamicResource BaseButtonStyle}" Height="40" Click="button_Click"/>
        <Button x:Name="button1" Content="use &amp; next" HorizontalAlignment="Left" Margin="270,490,0,0" VerticalAlignment="Top" Width="180" Style="{DynamicResource BaseButtonStyle}" Height="40" FontSize="36" FontFamily="Papyrus" Click="button1_Click"/>

    </Grid>
</Window>
